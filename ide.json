
{
    "$schema": "https://laravel-ide.com/schema/laravel-ide-v2.json",
    "codeGenerations": [
        {
            "id": "haridarshan.create-elastic-migration",
            "name": "Create OpenSearch Migration",
            "inputFilter": "opensearch",
            "files": [
                {
                    "directory": "/opensearch/migrations",
                    "name": "${CURRENT_TIME|format:yyyy_MM_dd_HHmmss}_${INPUT_CLASS|className|snakeCase}.php",
                    "template": {
                        "type": "stub",
                        "path": "src/Console/stubs/migration.blank.stub",
                        "parameters": {
                            "DummyClass": "${INPUT_FQN|className}"
                        }
                    }
                }
            ]
        }
    ]
}
