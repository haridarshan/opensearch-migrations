{
    "name": "haridarshan/opensearch-migrations",
    "description": "OpenSearch migrations for Laravel",
    "keywords": [
        "laravel",
        "migrations",
        "opensearch",
        "php"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Babenko",
            "email": "babenko.i.a@gmail.com"
        },
        {
            "name": "Hari Darshan Gorana",
            "email": "er.haridarshan@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "OpenSearch\\Migrations\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "OpenSearch\\Migrations\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^7.4 || ^8.0 || ^8.1",
        "haridarshan/opensearch-adapter": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "orchestra/testbench": "^7.5",
        "friendsofphp/php-cs-fixer": "^3.14",
        "phpstan/phpstan": "^1.10",
        "dg/bypass-finals": "^1.3"
    },
    "config": {
        "bin-dir": "bin",
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "OpenSearch\\Migrations\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
